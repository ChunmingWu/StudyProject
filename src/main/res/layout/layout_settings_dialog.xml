<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">


    <RelativeLayout
        android:id="@+id/ll_settings_dialog"
        android:layout_width="275dp"
        android:layout_height="252dp"
        android:layout_below="@+id/iv_cha_settings_dialog"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="17dp"
        android:background="@drawable/shape_settings_dialog_white"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/iv_bg_settings_settings_dialog"
            android:layout_width="match_parent"
            android:layout_height="109dp"
            android:background="@drawable/bg_settings_scratch" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="17dp"
            android:gravity="left"
            android:text="Settings"
            android:textColor="@color/colorWhite"
            android:textSize="25sp" />

        <RelativeLayout
            android:id="@+id/rl_music_settings_dialog"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/iv_bg_settings_settings_dialog"
            android:layout_marginLeft="27dp"
            android:layout_marginRight="21dp"
            android:layout_marginTop="42dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:gravity="center_vertical|left"
                android:text="Music"
                android:textStyle="bold"
                android:textColor="@color/colorBlack_33"
                android:textSize="18sp" />

            <CheckBox
                android:id="@+id/cb_music_settings_dialog"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                style="@style/CustomCheckboxTheme"
                android:checked="true"
                />

        </RelativeLayout>

        <RelativeLayout
            android:layout_below="@+id/rl_music_settings_dialog"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="27dp"
            android:layout_marginRight="21dp"
            android:layout_marginTop="28dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:gravity="center_vertical|left"
                android:text="Voice"
                android:textStyle="bold"
                android:textColor="@color/colorBlack_33"
                android:textSize="18sp" />

            <CheckBox
                android:id="@+id/cb_voice_settings_dialog"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                style="@style/CustomCheckboxTheme"
                android:checked="true"/>

        </RelativeLayout>

    </RelativeLayout>

    <ImageView
        android:id="@+id/iv_cha_settings_dialog"
        android:layout_width="28dp"
        android:layout_height="28dp"
        android:layout_alignParentTop="true"
        android:layout_alignRight="@+id/ll_settings_dialog"
        android:background="@drawable/icon_cha" />


</RelativeLayout>